        <Button Content="Deszyfruj!" HorizontalAlignment="Left" Margin="455,310,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.088,0.514" Width="75" Click="Button_Click_1"/>
        <TextBox x:Name="deszyfrresult" HorizontalAlignment="Left" Margin="581,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <TextBlock HorizontalAlignment="Left" Margin="597,291,0,0" TextWrapping="Wrap" Text="Odszyfrowany tekst" VerticalAlignment="Top" Width="120" TextAlignment="Center"/>

    </Grid>
</Window>
