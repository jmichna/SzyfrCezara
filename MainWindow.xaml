        <Button Content="Szyfruj!" HorizontalAlignment="Left" Margin="455,104,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="szyfrresult" HorizontalAlignment="Left" Margin="581,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <TextBlock HorizontalAlignment="Left" Margin="605,84,0,0" TextWrapping="Wrap" Text="Zaszyfrowany tekst" VerticalAlignment="Top"/>
        <TextBox x:Name="deszyfrtext" HorizontalAlignment="Left" Margin="48,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,291,0,0" TextWrapping="Wrap" Text="Podaj tekst do deszyfrowania" VerticalAlignment="Top" Width="156" TextAlignment="Center"/>
        <TextBox x:Name="deszyfrint" HorizontalAlignment="Left" Margin="234,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
