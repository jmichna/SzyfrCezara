    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="207" Margin="0,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="780"/>
        <Rectangle HorizontalAlignment="Center" Height="207" Margin="0,217,0,0" Stroke="Black" VerticalAlignment="Top" Width="780"/>
